
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentQuiz</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <style>
        body {
            background-image: url('../../Content/img/quiz.jpg');
            background-size: cover;
        }
    </style>
</head>
<body>
    @if(@ViewBag.error!=null)
    {
    <div class="alert alert-danger">
        <strong>Warning!</strong> @ViewBag.error
    </div>
    }

    @using (Html.BeginForm())
    {
        <div class="container">
            <h1 style="text-align:center; color:white; font-family:Algerian">Enter Quiz PIN</h1>
            <br />
            <input type="text" id="room" name="room" placeholder="Quiz PIN" class="form-control" />

            <br />
            <input type="Submit" value="Submit" class="btn btn-info btn-block">
        </div>
    }
</body>
</html>
